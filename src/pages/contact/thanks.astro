<style>
  form {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    max-width: var(--form-max-width);
    margin: 0 auto;
  }
  .input-row {
    display: grid;
    grid-template-columns: 100px 1fr;
    margin: 5px 0;
  }
  input[type="submit"] {
    margin: 3rem auto 0 auto;
  }
</style>